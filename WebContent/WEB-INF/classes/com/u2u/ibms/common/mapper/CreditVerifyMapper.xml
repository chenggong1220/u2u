<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">

<mapper namespace="com.u2u.ibms.common.mapper.CreditVerifyMapper">

	<resultMap id="creditVerify" type="com.u2u.ibms.common.beans.CreditVerify" extends="baseBean">
        <result property="id" jdbcType="INTEGER" column="id"/>
        <result property="projectId" jdbcType="INTEGER" column="project_id"/>
        <result property="creditRequired1" jdbcType="INTEGER" column="required1"/>
        <result property="creditRequired2" jdbcType="INTEGER" column="required2"/>
        <result property="creditRequired3" jdbcType="INTEGER" column="required3"/>
        <result property="required1Content" jdbcType="VARCHAR" column="required1_content"/>
        <result property="required2Content" jdbcType="VARCHAR" column="required2_content"/>
        <result property="required3Content" jdbcType="VARCHAR" column="required3_content"/>
        <result property="required4Content" jdbcType="VARCHAR" column="required4_content"/>
        <result property="required6Content" jdbcType="VARCHAR" column="required6_content"/>
	</resultMap>
	
	<sql id="BASE_CREDIT_VERIFY_SQL">
		PROJECT_ID,
		required1,
		required2,
		required3,
		required1_content,
		required2_content,
		required3_content,
		required4_content,
		required6_content,
		<include refid="BASE_BEAN_SQL"/>
	</sql>
	
	<select id="getByProjectId" resultMap="creditVerify">
		SELECT
			ID,
			<include refid="BASE_CREDIT_VERIFY_SQL" />
		FROM
			T_CREDIT_VERIFY
		WHERE 
			PROJECT_ID = #{projectId}
		ORDER BY CREATE_DATE DESC
	</select>
	
	<select id="getById" resultMap="creditVerify">
		SELECT
			ID,
			<include refid="BASE_CREDIT_VERIFY_SQL" />
		FROM
			T_CREDIT_VERIFY
		WHERE
			ID = #{id}
	</select>
	
	<insert id="insert" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO T_CREDIT_VERIFY
		(
			<include refid="BASE_CREDIT_VERIFY_SQL" />
		)
		VALUES
		(
    		#{projectId},
    		#{creditRequired1},
    		#{creditRequired2},
    		#{creditRequired3},
    		#{required1Content},
    		#{required2Content},
    		#{required3Content},
    		#{required4Content},
    		#{required6Content},
			#{createDate},
			#{operateDate}
		)
	</insert>

	<update id="update">
		UPDATE T_CREDIT_VERIFY
		SET
			PROJECT_ID = #{projectId},
			required1 = #{creditRequired1},
    		required2 = #{creditRequired2},
    		required3 = #{creditRequired3},
    		required1_content = #{required1Content},
    		required2_content = #{required2Content},
    		required3_content = #{required3Content},
    		required4_content = #{required4Content},
    		required6_content = #{required6Content},
			create_date = #{createDate},
			operate_date = #{operateDate}
		where
			id = #{id}
	</update>

	<delete id="delete">
		DELETE FROM T_CREDIT_VERIFY
		WHERE ID = #{id}
	</delete>
	
</mapper>
